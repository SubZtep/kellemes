{
  "name": "kellemes",
  "version": "1.0.0",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "description": "RAG-based chatbot (keLLeMes) - Monorepo",
  "license": "BSD-3-Clause",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "bun run --filter '*' build",
    "start": "bun run --filter @kellemes/api start",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' tsc --noEmit",
    "lint": "biome check .",
    "ingest": "bun run --filter @kellemes/api ingest",
    "cli": "bun run --filter @kellemes/cli start",
    "cli:dev": "bun --env-file .env --watch packages/cli/src/index.tsx",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^24.10.1",
    "autoevals": "^0.0.131",
    "evalite": "^0.19.0",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12",
    "@types/bun": "latest"
  }
}
