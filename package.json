{
  "name": "kellemes",
  "version": "1.0.0",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "description": "RAG-based chatbot (keLLeMes) - Monorepo",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "start": "pnpm --filter @kellemes/api start",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "lint": "biome check .",
    "ingest": "pnpm --filter @kellemes/api ingest",
    "cli": "pnpm --filter @kellemes/cli start",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "autoevals": "^0.0.131",
    "evalite": "^0.19.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
