{
  "name": "kellemes-monorepo",
  "version": "1.0.0",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "description": "RAG-based chatbot (keLLeMes) - Monorepo",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @kellemes/api dev",
    "dev:chat": "pnpm --filter @kellemes/chat-cli dev",
    "dev:tweak": "pnpm --filter @kellemes/tweak-cli dev",
    "start": "pnpm --filter @kellemes/api start",
    "test": "evalite",
    "lint": "pnpm -r lint",
    "ingest": "pnpm --filter @kellemes/api ingest",
    "chat": "pnpm --filter @kellemes/chat-cli start",
    "tweak": "pnpm --filter @kellemes/tweak-cli start",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "autoevals": "^0.0.131",
    "evalite": "^0.19.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
