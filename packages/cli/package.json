{
  "name": "@kellemes/cli",
  "version": "1.0.0",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "description": "Interactive CLI for keLLeMes",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "bin": {
    "kellemes-cli": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.json src/index.tsx",
    "build": "tsc",
    "compile": "bun build --compile ./src/index.tsx --outfile dist/kellemes-cli",
    "compile:linux-x64": "bun build --compile --target=bun-linux-x64 ./src/index.tsx --outfile dist/kellemes-cli-linux-x64",
    "compile:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./src/index.tsx --outfile dist/kellemes-cli-linux-arm64",
    "compile:macos-x64": "bun build --compile --target=bun-darwin-x64 ./src/index.tsx --outfile dist/kellemes-cli-macos-x64",
    "compile:macos-arm64": "bun build --compile --target=bun-darwin-arm64 ./src/index.tsx --outfile dist/kellemes-cli-macos-arm64",
    "compile:windows-x64": "bun build --compile --target=bun-windows-x64 ./src/index.tsx --outfile dist/kellemes-cli-windows-x64.exe",
    "compile:all": "npm run compile:linux-x64 && npm run compile:linux-arm64 && npm run compile:macos-x64 && npm run compile:macos-arm64 && npm run compile:windows-x64",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@kellemes/common": "workspace:*",
    "@kellemes/rag": "workspace:*",
    "@pppp606/ink-chart": "^0.2.1",
    "@tanstack/react-query": "^5.90.12",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "ink": "^6.5.1",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ollama": "^0.6.3",
    "react": "^19.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "react-devtools-core": "^7.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
