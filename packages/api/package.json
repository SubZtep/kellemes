{
  "name": "@kellemes/api",
  "version": "1.0.0",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "description": "Hono HTTP API server for keLLeMes",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "default": "./dist/db/index.ts"
    },
    "./db/*": {
      "types": "./dist/db/*.d.ts",
      "default": "./dist/db/*.ts"
    }
  },
  "scripts": {
    "dev": "bun --hot src/index.ts --console",
    "build": "echo 'No, the API no. Build not for here, bun runs TS from the source.'; exit 0",
    "start": "bun src/index.ts --console",
    "migrate": "bun scripts/migrate.ts",
    "test": "vitest run",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "ingest": "bun scripts/ingest-data.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@kellemes/common": "workspace:*",
    "@kellemes/rag": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.25",
    "@scalar/openapi-to-markdown": "^0.3.4",
    "dotenv": "^17.2.3",
    "hono": "^4.10.6",
    "kysely": "^0.28.8",
    "kysely-postgres-js": "^3.0.0",
    "ollama": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
