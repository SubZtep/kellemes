{
  "name": "@kellemes/api",
  "version": "1.0.0",
  "description": "Hono HTTP API server for keLLeMes",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "migrate": "tsx src/scripts/migrate.ts",
    "test": "vitest run",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "ingestzz": "tsx ./packages/api/src/scripts/ingest-data.ts",
    "ingest": "tsx ./src/scripts/ingest-data.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@kellemes/core": "workspace:*",
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "hono": "^4.10.6",
    "kysely": "^0.28.8",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
